{
  "manifest_version": 3,
  "name": "URL Appender",
  "version": "1.0",
  "description": "Appends text to the current URL based on radio button selection.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab"
  ]
}
