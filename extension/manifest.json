{
  "manifest_version": 3,
  "name": "Feature Flags Extension",
  "version": "1.0.0",
  "description": "A basic extension that allows you to enable and disable feature flags in a web application. Currently for use with SIMON.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
